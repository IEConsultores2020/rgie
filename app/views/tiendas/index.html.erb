

<h1>Listado Tiendas</h1>
<% if can? :create, Tienda%>
<%= link_to 'New Tienda', new_tienda_path %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Empresa</th>
      <th>Vendedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tiendas.each do |tienda| %>
      <tr>
        <td><%= tienda.nombre %></td>
        <td><%= tienda.descripcion %></td>
        <td><%= tienda.empresa %></td>
        <td><%= tienda.user_name %></td>              
        <td><%= link_to 'Show', tienda %></td>
        <td>
          <% if can? :update, tienda %>
          <%= link_to 'Edit', edit_tienda_path(tienda) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, tienda %>
          <%= link_to 'Destroy', tienda, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


