<% title "Puntos Venta" %>

<%= form_tag puntoventa_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

<ul>
  <% for puntoventum in @puntoventa%>
    <li class="arrow">
      <%= puntoventum.name %><br>
      <%= puntoventum.direccion %><br>
      <%= puntoventum.tipocanal.nombre %><br>
      <%= puntoventum.latitude %><br>
      <%= puntoventum.longitude %><br>
      <%= puntoventum.user.name %><br>            
    </li>
    <%= link_to 'Show', puntoventum %><br>

  <% end %>
</ul>

 