
<h1>Listing Puntos Venta  <%= link_to '+', new_puntoventum_path %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Direccion</th>
      <th>Tipocanal</th>
      <th>Ciudad</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puntoventa.each do |puntoventum| %>
      <tr>
        <td><%= puntoventum.name %></td>
        <td><%= puntoventum.direccion %></td>
        <td><%= puntoventum.tipocanal.nombre %></td>
        <td><%= puntoventum.ciudad.name %></td>
        <td><%= puntoventum.user.name %></td>
        <td><%= link_to 'Show', puntoventum %></td>
        <td><%= link_to 'Edit', edit_puntoventum_path(puntoventum) %></td>
        <td><%= link_to 'Destroy', puntoventum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

