
<h1>Listing Equipos  <%= link_to '+', new_equipo_path %></h1>

<table>
  <thead>
    <tr>
      <th>Referencia</th>
      <th>Descontinuado</th>
      <th>Fabricante</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipos.each do |equipo| %>
      <tr>
        <td><%= equipo.referencia %></td>
        <td><%= equipo.descontinuado %></td>
        <td><%= equipo.fabricante.nombre %></td>
        <td><%= equipo.user.name %></td>
        <td><%= link_to 'Show', equipo %></td>
        <td><%= link_to 'Edit', edit_equipo_path(equipo) %></td>
        <td><%= link_to 'Destroy', equipo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Equipo', new_equipo_path %>
