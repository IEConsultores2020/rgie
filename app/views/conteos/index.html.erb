<p id="notice"><%= notice %></p>

<strong>Importar Inventarios</strong><br>
<%= form_tag import_conteos_path, multipart: true do %><br>
    <%= file_field_tag :file %><br>
    <%= submit_tag "Importar" %>
<% end %>
<br>

<h1>Listing Conteos</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Codbarras</th>
      <th>Inventario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conteos.each do |conteo| %>
      <tr>
        <td><%= conteo.cantidad %></td>
        <td><%= conteo.codbarras %></td>
        <td><%= conteo.inventario %></td>
        <td><%= link_to 'Show', conteo %></td>
        <td><%= link_to 'Edit', edit_conteo_path(conteo) %></td>
        <td><%= link_to 'Destroy', conteo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conteo', new_conteo_path %>
