<%= will_paginate @ciudads %>
<h1>Listing Ciudades  <%= link_to '+', new_ciudad_path %></h1>
<br>
<strong>Importar Ciudades</strong>
<%= form_tag import_ciudads_path, multipart: true do %>
  <%= file_field_tag :file %><br>
  <%= submit_tag "Importar" %>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Departamento</th>
      <th>Region</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ciudads.each do |ciudad| %>
      <tr>
        <td><%= ciudad.name %></td>
        <td><%= ciudad.latitude %></td>
        <td><%= ciudad.longitude %></td>
        <td><%= ciudad.departamento.name %></td>
        <td><%= ciudad.region_id%></td>
       
        <td><%= link_to 'Show', ciudad %></td>
        <td><%= link_to 'Edit', edit_ciudad_path(ciudad) %></td>
        <td><%= link_to 'Destroy', ciudad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @ciudads %>
<%= link_to 'New Ciudad', new_ciudad_path %>
