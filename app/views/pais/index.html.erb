<br>
<%= link_to 'Crear Pais', new_pai_path %>
<br>
<h2>Importar Paises</h2>
<%= form_tag import_pais_path, multipart: true do %>
  <%= file_field_tag :file %><br>
  <%= submit_tag "Importar" %>
<% end %>
<br>
<h1>Listado de Paises  <%= link_to '+', new_pai_path %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Huso</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pais.each do |pai| %>
      <tr>
        <td><%= pai.name %></td>
        <td><%= pai.huso %></td>
        <td><%= pai.user.name %></td>
        <td><%= link_to 'Show', pai %></td>
        <td><%= link_to 'Edit', edit_pai_path(pai) %></td>
        <td><%= link_to 'Destroy', pai, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



