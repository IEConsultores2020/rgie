
<h1>Listing Canales  <%= link_to '+', new_canal_path %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tipocanal</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @canals.each do |canal| %>
      <tr>
        <td><%= canal.name %></td>     
        <td><%= canal.tipocanal.nombre %></td>
        <td><%= canal.user.name %></td>
        <td><%= link_to 'Show', canal %></td>
        <td><%= link_to 'Edit', edit_canal_path(canal) %></td>
        <td><%= link_to 'Destroy', canal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Canal', new_canal_path %>
