
<h1>Listado Componentes</h1>
<% if can? :create, Componente %>
<%= link_to 'Nuevo Componente', new_componente_path, class: "btn-primary btn-sm" %><br><br>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Vendedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @componentes.each do |componente| %>
      <tr>
        <td><%= componente.codigo %></td>
        <td><%= componente.nombre %></td>
        <td><%= componente.descripcion %></td>
        <td><%= componente.user_name %></td>      
        <td><button type="button" class="btn btn-success btn-sm "><%= link_to 'Mostrar', componente %></button></td>
        <td>
          <% if can? :update, componente %>
          <button type="button" class="btn btn-success btn-sm "><%= link_to 'Editar', edit_componente_path(componente) %></button>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, componente %>
          <button type="button" class="btn btn-danger btn-sm">
            <%= link_to 'Eliminar', componente, 
                method: :delete, data: { confirm: 'Esta seguro de Eliminar?' } %>
          </button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>